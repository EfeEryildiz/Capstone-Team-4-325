<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.studystack.SignUpController">
    <left>
        <AnchorPane prefHeight="400.0" prefWidth="300.0" style="-fx-background-color: #0078D7;; -fx-padding: 20; -fx-border-radius: 10;" BorderPane.alignment="CENTER">
            <children>
                <Text fill="#f8f8f8" layoutX="30.0" layoutY="200.0" style="-fx-font-size: 36px; -fx-font-family: 'AppleMyungjo Regular'; -fx-text-alignment: center;" text="Welcome to StudySync" />
            </children>
        </AnchorPane>
    </left>
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="emailField" promptText="Email" style="-fx-background-color: transparent; -fx-border-color: #0078D7;; -fx-border-width: 0 0 2px 0; -fx-padding: 5px; -fx-text-fill: #333; -fx-font-size: 14px;" />
                <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-color: transparent; -fx-border-color: #0078D7;; -fx-border-width: 0 0 2px 0; -fx-padding: 5px; -fx-text-fill: #333; -fx-font-size: 14px;" />
                <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" style="-fx-background-color: transparent; -fx-border-color: #0078D7;; -fx-border-width: 0 0 2px 0; -fx-padding: 5px; -fx-text-fill: #333; -fx-font-size: 14px;" />
                <Button onAction="#handleSignUp" style="-fx-background-color: #0078D7;; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-radius: 5px; -fx-background-radius: 5px;" text="Sign Up" />
                <Button onAction="#handleBackToLogin" style="-fx-background-color: #dcdcdc; -fx-text-fill: #333; -fx-font-size: 14px; -fx-border-radius: 5px; -fx-background-radius: 5px;" text="Back to Login" />
            </children>
        </VBox>
    </center>
</BorderPane>
