<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.studystack.NotebookController" spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <children>
        <HBox spacing="10" alignment="CENTER">
            <Button text="New Note" onAction="#handleNewNote" fx:id="newNoteButton" />
            <Button text="Delete Note" onAction="#handleDeleteNote" fx:id="deleteNoteButton" />
            <Button text="Convert to Flashcards" onAction="#handleConvertToFlashcards" fx:id="convertToFlashcardsButton" />
        </HBox>
        <HBox spacing="10" alignment="CENTER">
            <ListView fx:id="notesListView" prefWidth="200" prefHeight="300" />
            <TextArea fx:id="noteTextArea" prefWidth="400" prefHeight="300" wrapText="true" />
        </HBox>
    </children>
</VBox>

