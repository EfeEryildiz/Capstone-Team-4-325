<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.studystack.MainController">
  <!-- Navigation bar on the left -->
  <left>
    <VBox spacing="10" style="-fx-background-color: #2C3E50;" alignment="TOP_CENTER">
      <children>
        <Button text="Home" onAction="#loadHomePage" prefWidth="100"/>
        <Button text="Flashcards" onAction="#loadFlashcardsPage" prefWidth="100"/>
        <Button text="Quiz Mode" onAction="#loadQuizModePage" prefWidth="100"/>
        <Button text="Notebook" onAction="#loadNotebookPage" prefWidth="100"/>
      </children>
    </VBox>
  </left>

  <!-- Content area where each page will be loaded -->
  <center>
    <BorderPane fx:id="contentPane" style="-fx-background-color: #ECF0F1;" />
  </center>
</BorderPane>

