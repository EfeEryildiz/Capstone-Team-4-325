<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.studystack.QuizModeController" spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <children>
        <HBox spacing="10" alignment="CENTER">
            <Label fx:id="SelectText" text="Select Deck:" />
            <ComboBox fx:id="deckComboBox" prefWidth="200" />
            <Button fx:id="startQuizButton" text="Start Quiz" onAction="#handleStartQuiz" />
        </HBox>
        <VBox fx:id="quizVBox" spacing="10" alignment="CENTER">
            <Label fx:id="questionLabel" text="Question will appear here" wrapText="true" />
            <ScrollPane fitToWidth="true" prefHeight="200.0">
                <content>
                    <VBox fx:id="optionsVBox" spacing="5" />
                </content>
            </ScrollPane>
            <Button fx:id="submitButton" text="Submit Answer" onAction="#handleSubmitAnswer" />
            <Label fx:id="feedbackLabel" text="" wrapText="true" />
        </VBox>
    </children>
</VBox>
