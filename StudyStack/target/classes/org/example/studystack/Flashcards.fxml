<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.studystack.FlashcardsController" spacing="20" alignment="CENTER" style="-fx-padding: 20;">
    <children>
        <HBox spacing="15" alignment="CENTER">
            <Button text="New Deck" onAction="#handleNewDeck" fx:id="newDeckButton" styleClass="modern-button" />
            <Button text="New Flashcard" onAction="#handleNewFlashcard" fx:id="newFlashcardButton" styleClass="modern-button" />
        </HBox>

        <HBox spacing="20" alignment="TOP_CENTER">
            <!-- Decks List -->
            <VBox spacing="10">
                <ListView fx:id="decksListView" prefWidth="200" prefHeight="400" />
            </VBox>

            <VBox spacing="10">
                <ListView fx:id="flashcardsListView" prefWidth="400" prefHeight="400" />
            </VBox>
        </HBox>

        <VBox fx:id="flashcardEditorVBox" spacing="10" alignment="CENTER" style="-fx-border-color: black; -fx-padding: 10;">
            <children>
                <TextField fx:id="questionField" promptText="Enter question here..." prefWidth="400" />
                <TextArea fx:id="answerArea" promptText="Enter answer here..." prefWidth="400" prefHeight="100" wrapText="true" />
                <Button text="Save Flashcard" onAction="#handleSaveFlashcard" />
            </children>
        </VBox>
    </children>
</VBox>
